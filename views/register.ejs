<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="register-container card card-body text-center">
        <h1>Habit Tracker</h1>
        <h3 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register
        </h3>
        <%- include ("./partials/messages") %>
        <form action="/users/register" method="post">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" id="name" required name="name" class="form-control" placeholder="Your Name"
              value="<%= typeof name != 'undefined' ? name : '' %>" />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required class="form-control" placeholder="Your Email"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </div>
          <button type="submit" class="btn btn-outline-danger btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4"><a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>