<p class="lead mt-4 font-weight-bold" style="color: black">
  <a style="color: black" href="http://localhost:8000/">Goto Homepage</a>
</p>

<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div id="login-container" class="card card-body text-center ">

        <h3 class="text-center mb-3"><i class="fas fa-user"></i>Login</h3>
        <%- include ("./partials/messages") %>
        <form action="/users/login" method="post">
          <div class="form-group">
            <label for="email" class="font-weight-bold" style="color: black">Email</label>
            <input type="email" id="email" name="email" required class="form-control" placeholder="Enter Email" />
          </div>
          <button type="submit" class="btn btn-outline-dark btn-block">Login</button>
        </form>
        <p class="lead mt-4 font-weight-bold" style="color: black">
          New User? <a style="color: black" href="/users/register">Register</a>
        </p>
      </div>
    </div>
  </div>